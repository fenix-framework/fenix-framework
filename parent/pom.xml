            </dependency>
            <dependency>
                <groupId>pt.ist</groupId>
                <artifactId>fenix-framework-backend-infinispan</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>pt.ist</groupId>
                <artifactId>fenix-framework-backend-ogm</artifactId>
                <version>${project.version}</version>
